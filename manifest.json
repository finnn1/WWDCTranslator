{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "WWDC 한글 자막",
  "description": "WWDC 한글 자막 띄우기",
  "version": "0.1.0",
  "manifest_version": 2,

  "permissions": [ "https://developer.apple.com/videos/play/*", "storage" ],

  "content_scripts": [
    {
      "matches": [ "https://developer.apple.com/videos/*" ],
      "js": [ "js/Authentication.js", "js/WWDCTranslate.js", "js/translate.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "js/Authentication.js",
    "js/WWDCTranslate.js",
    "js/translate.js"
  ]
}
 